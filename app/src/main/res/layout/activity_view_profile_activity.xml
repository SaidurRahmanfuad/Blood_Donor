    <android.support.v7.widget.CardView

        android:layout_marginTop="@dimen/_270sdp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/nameTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Name : "
                    android:textColor="@color/colorBack"
                    android:fontFamily="sans-serif-condensed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.312" />

                <TextView
                    android:id="@+id/nameShowTVId"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Enter Donor Name"
                    android:fontFamily="sans-serif-condensed"
                    app:layout_constraintBottom_toTopOf="@+id/ageETId"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.064"
                    app:layout_constraintStart_toEndOf="@+id/nameTVId"
                    app:layout_constraintTop_toBottomOf="@+id/donorImage"
                    app:layout_constraintVertical_bias="0.776"
                     />
            </LinearLayout>


            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBack"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Age : "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ageETId"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.383" />

                <TextView
                    android:id="@+id/ageShowTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"

                    android:ems="10"
                    android:text="Enter Donor Age"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/nameTVId"
                    app:layout_constraintTop_toBottomOf="@+id/donorImage"
                    app:layout_constraintVertical_bias="0.196" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="44dp"
                    android:text="Blood group : "
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorBack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/spinnerId"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.471" />

                <TextView

                    android:textSize="16sp"
                    android:id="@+id/bloodShowTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ems="10"

                    android:entries="@array/bloodgroup"
                    android:text="Blood Show"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.311"
                    app:layout_constraintStart_toEndOf="@+id/nameTVId"
                    app:layout_constraintTop_toBottomOf="@+id/donorImage"
                    app:layout_constraintVertical_bias="0.308" />

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="44dp"
                    android:text="Contract Number : "
                    android:textColor="@color/colorBack"
                    android:fontFamily="sans-serif-condensed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/contractETId"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.549" />

                <TextView
                    android:id="@+id/contractNumberShowTVId"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ems="10"
                    android:textSize="16sp"
                    android:text="Contraci Number"
                    app:layout_constraintBottom_toTopOf="@+id/lastDonatedateShowTVId"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.044"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/bloodShowTVId"
                    />

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginLeft="44dp"
                    android:text="Last date of donation : "
                    android:textColor="@color/colorBack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.629" />

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/lastDonatedateShowTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingRight="18sp"
                    android:paddingBottom="2dp"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="textPersonName"
                    android:text="dd-mm-yyyy"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.709"
                    app:layout_constraintStart_toEndOf="@+id/nameTVId"
                    app:layout_constraintTop_toBottomOf="@+id/donorImage"
                    app:layout_constraintVertical_bias="0.521" />

            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/addressTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:text="Address : "
                    android:textColor="@color/colorBack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.708" />

                <TextView
                    android:id="@+id/addressShowTVId"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:ems="10"
                    android:text="Enter the Donor Address"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.364"
                    app:layout_constraintStart_toEndOf="@+id/nameTVId"
                    app:layout_constraintTop_toBottomOf="@+id/donorImage"
                    app:layout_constraintVertical_bias="0.62" />
            </LinearLayout>













            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/editProfileId"
                    android:layout_width="154dp"
                    android:layout_height="66dp"

                    android:background="@drawable/edit_profile_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/callDonorId"
                    app:layout_constraintHorizontal_bias="0.728"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addressShowTVId"
                    app:layout_constraintVertical_bias="1.0" />

                <Button
                    android:id="@+id/callDonorId"
                    android:layout_width="154dp"
                    android:layout_height="65dp"

                    android:background="@drawable/call_donor_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addressShowTVId"
                    app:layout_constraintVertical_bias="0.972" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>